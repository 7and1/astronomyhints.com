# =============================================================================
# Environment Variables for Orbit Command
# =============================================================================
# Copy this file to .env.local for local development
# For production, set these in your hosting provider's dashboard
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------

# Base URL of the site (required for SEO and social sharing)
NEXT_PUBLIC_SITE_URL=https://astronomyhints.com

# Application environment (development, staging, production)
NODE_ENV=development

# -----------------------------------------------------------------------------
# Analytics (optional)
# -----------------------------------------------------------------------------

# Google Analytics 4 Measurement ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Plausible Analytics domain (if using Plausible instead of GA)
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=astronomyhints.com

# -----------------------------------------------------------------------------
# Error Tracking (optional)
# -----------------------------------------------------------------------------

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Sentry environment
# SENTRY_ENVIRONMENT=production

# Sentry auth token (for source maps upload, server-side only)
# SENTRY_AUTH_TOKEN=

# Sentry organization slug
# SENTRY_ORG=

# Sentry project slug
# SENTRY_PROJECT=

# -----------------------------------------------------------------------------
# Social Sharing (optional)
# -----------------------------------------------------------------------------

# Twitter/X handle for social cards
# NEXT_PUBLIC_TWITTER_HANDLE=@astronomyhints

# Default OG image URL
# NEXT_PUBLIC_OG_IMAGE=https://astronomyhints.com/og-image.png

# -----------------------------------------------------------------------------
# Feature Flags (optional)
# -----------------------------------------------------------------------------

# Enable debug mode (shows additional logging)
# NEXT_PUBLIC_DEBUG=false

# Enable performance monitoring overlay
# NEXT_PUBLIC_PERF_MONITOR=false

# -----------------------------------------------------------------------------
# API Keys (if needed in future)
# -----------------------------------------------------------------------------

# NASA API key for additional astronomy data
# NASA_API_KEY=

# Weather API key for viewing conditions
# WEATHER_API_KEY=

# -----------------------------------------------------------------------------
# Deployment (CI/CD only - do not set locally)
# -----------------------------------------------------------------------------

# Vercel deployment tokens (set in CI/CD secrets)
# VERCEL_TOKEN=
# VERCEL_ORG_ID=
# VERCEL_PROJECT_ID=

# Netlify deployment tokens (set in CI/CD secrets)
# NETLIFY_AUTH_TOKEN=
# NETLIFY_SITE_ID=

# -----------------------------------------------------------------------------
# Notifications (CI/CD only)
# -----------------------------------------------------------------------------

# Slack webhook for deployment notifications
# SLACK_WEBHOOK_URL=

# Discord webhook for deployment notifications
# DISCORD_WEBHOOK_URL=
